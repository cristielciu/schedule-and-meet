<div class="col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
  <h1>Settings</h1>

  <%= form_for @user, url: { action: 'update' }, validate: true do |f| %>
    <div class="form-group form-group-inline">
      <%= f.label :facebook_api_key %>
      <%= f.text_field :facebook_api_key, placeholder: 'Facebook API key', class: 'form-control' %>
      <p class='error text-danger'><%= show_errors(@user, :facebook_api_key) %></p>
    </div>

    <div class="form-group form-group-inline">
      <%= f.label :group_id %>
      <%= f.text_field :group_id, placeholder: 'Group ID', class: 'form-control' %>
       <p class='error text-danger'><%= show_errors(@user, :group_id) %></p>
    </div>

    <%= f.submit 'Update', class: 'btn btn-default' %>
  <% end %>
</div>