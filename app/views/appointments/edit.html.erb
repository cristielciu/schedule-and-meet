<div class="col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
  <h1>Update appointment</h1>

  <%= form_for @appointment, url: { action: 'update' }, validate: true do |f| %>
    <div class="form-group form-group-inline">
      <%= f.text_field :name, placeholder: 'Appointment name', class: 'form-control' %>
       <p class='error text-danger'><%= show_errors(@appointment, :name) %></p>
    </div>

    <div class="form-group">
      <%= f.text_area :description, placeholder: 'Descriprion', class: 'form-control' %>
      <p class='error text-danger'><%= show_errors(@appointment, :description) %></p>
    </div>

    <div class="form-group">
      <%= select_datetime Time.now, { prefix: :appointment , order: %i[day month year hour minute], minute_step: 15 }, class: 'btn btn-dark dropdown-toggle mt-2' %>
      <p class='error text-danger'><%= show_errors(@appointment, :starts_at) %></p>
    </div>

    <%= f.hidden_field :id %>

    <%= f.submit 'Update', class: 'btn btn-default' %>
  <% end %>
</div>