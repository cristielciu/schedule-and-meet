<div class='container'>
  <div class='row'>
    <div class='col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4'>
      <% if user_signed_in? %>
        
        <%= link_to 'Schedule', new_appointment_path, class: 'btn btn-default btn-block' %>
      <% end %>
    </div>
    <div class='col-12 mt-3'>
      <% if user_signed_in? %>
        <%= render 'appointments/appointments_list', appointments: @appointments %>
      <% else %>
        <h4 class='text-center'>Schedule app used for managing appointments</h4>
      <% end %>
      </div>
    </div>
</div>