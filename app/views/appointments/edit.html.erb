<h1>Update appointment</h1>
<%= form_for @appointment, url: { action: 'update' }, validate: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :starts_at %>
    <%= select_datetime @appointment.starts_at, prefix: :appointment , order: %i[day month year hour minute], minute_step: 15 %>
  </div>

  <%= f.hidden_field :id %>

  <%= f.submit 'Update' %>
<% end %>